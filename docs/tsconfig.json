{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "wasm-feature-detect": [
        "node_modules/wasm-feature-detect",
        "../js/package/node_modules/wasm-feature-detect",
        "../node_modules/wasm-feature-detect"
      ]
    }
  },
  "include": [
    "../js/package/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../js/package/node_modules"
  ]
}

